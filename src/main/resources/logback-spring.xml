        <include resource="./logback/file-info-appender.xml"/>
        <include resource="./logback/file-warn-appender.xml"/>
        <include resource="./logback/file-error-appender.xml"/>

        <root level="INFO">
            <appender-ref ref="FILE-INFO"/>
